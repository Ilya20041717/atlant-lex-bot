# Amvera Cloud — Python Pip (документация: docs.amvera.ru)
meta:
  environment: python
  toolchain:
    name: pip
    version: "3.11"

build:
  requirementsPath: requirements.txt
  useCache: true

run:
  # Переход в /app и запуск оттуда (на Amvera артефакты в /app)
  command: sh -c "cd /app && PYTHONPATH=. python -m app.main"
  persistenceMount: /data
